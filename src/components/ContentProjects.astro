---
interface Project {
  name: string;
  description: string;
  link: {
    url?: string;
    target?: string;
    title?: string;
    buttonLabel?: string;
  };
}

const projects: Project[] = [
  {
    name: "Ktor-Countries",
    description:
      "Una aplicación simple de Ktor que proporciona una API REST para recuperar información de países. Permite a los usuarios buscar países por nombre, código o región.",
    link: {
      url: "https://github.com/josego16/ktor-countries",
    },
  },
  {
    name: "Zootopia",
    description:
      "Una aplicación web que permite a los usuarios buscar animales por nombre, especie o hábitat. Proporciona información detallada sobre cada animal, incluidas imágenes y descripciones.",
    link: {
      url: "https://github.com/josego16/zootopia",
    },
  },
  {
    name: "MVVM Login",
    description:
      "Una aplicación simple de Android que demuestra el patrón de arquitectura MVVM (Modelo-Vista-ViewModel). Proporciona una pantalla de inicio de sesión con validación y manejo de errores.",
    link: {
      url: "https://github.com/josego16/MvvmLogin",
    },
  },
];
---

<div>
  <!-- <h2 class="text-2xl font-bold text-white mb-4">Latest Projects</h2> -->

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    {
      projects.map((project) => (
        <div class="flex flex-col justify-center items-start border border-gray-700 rounded-lg p-4 bg-black">
          <h3 class="text-xl font-semibold text-white mb-2">{project.name}</h3>

          <p class="text-gray-400">{project.description}</p>

          {project.link?.url ? (
            <a
              href={project.link.url}
              title={project.link.title || project.name}
              target={project.link.target || "_blank"}
              class="
                                w-full px-4 py-2.5 mt-4 text-center

                                border border-gray-600 rounded-lg

                                hover:text-primary
                                hover:border-primary
                            "
            >
              {project.link.buttonLabel || "Open Project Website"}
            </a>
          ) : null}
        </div>
      ))
    }
  </div>
</div>
